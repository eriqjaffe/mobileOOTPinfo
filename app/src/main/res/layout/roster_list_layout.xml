<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/family_layout"
    android:layout_width="fill_parent"
    android:layout_height="54dp"
    android:orientation="horizontal"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/playerID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/uniformNumber"
        fontPath="fonts/OpenSans-ExtraBold.ttf"
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="12"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/playerPicture"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/uniformNumber"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/playerPicture"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playerName"
            fontPath="fonts/OpenSans-Bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player Name"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/playerPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POS" />
    </LinearLayout>

    <TextView
        android:id="@+id/playerAge"
        fontPath="fonts/OpenSans-Bold.ttf"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/playerBT"
        android:layout_alignBottom="@+id/playerBT"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:text="30" />

    <TextView
        android:id="@+id/playerBT"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toStartOf="@id/playerAge"
        android:gravity="center_horizontal"
        android:text="L/L" />

</RelativeLayout>