<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">
        <TextView
            android:id="@+id/mgrYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/awayGame"
            fontPath="fonts/OpenSans-Bold.ttf"
            android:text="2081"/>

        <TextView
            android:id="@+id/mgrTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            fontPath="fonts/OpenSans-Bold.ttf"
            android:text="CBB (OTBA)"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:weightSum="7">
        <TextView
            android:id="@+id/mgrW"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/awayGame"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="105"/>

        <TextView
            android:id="@+id/mgrL"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="57"/>

        <TextView
            android:id="@+id/mgrPCT"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/awayGame"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text=".605"/>

        <TextView
            android:id="@+id/mgrAVG"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text=".300"/>

        <TextView
            android:id="@+id/mgrHR"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/awayGame"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="200"/>

        <TextView
            android:id="@+id/mgrERA"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@color/awayGame"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="3.67"/>

        <TextView
            android:id="@+id/mgrK"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="1234"/>
</LinearLayout>

</RelativeLayout>